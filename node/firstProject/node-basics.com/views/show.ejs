<% include ./partials/header %>
    <div class= "ui center aligned secondary grey inverted segment" id="showPage">   
        <div class= "ui header">
            <p> <%=game.title %></p>
        </div>
        <div class = "ui medium image">
             <img src = "<%= game.image %>" >
        </div>
        <div class = "ui small header">
            <span> Post Created: <%= game.created.toDateString() %></span>
        </div>
        <div class = "ui small header">
            <p> Score: <%= game.score %> </p>
        </div>
        <div class = "content">
            <p> <%= game.content %></p>
        </div>
        <div class = "content">
            <a href= "/games/<%=game._id %>/edit" class="ui orange button">EDIT</a>
            <form action="/games/<%=game.id%>?_method=DELETE"  method="POST" id="inlineObject">
                <button class="ui red button">DELETE</button>
            </form>
        </div>
    </div>
<% include ./partials/footer %>